@inherits SignalRDemoBase

<h3>SignalR Demo</h3>

<div>
    <MatButton OnClick="ConnectToServer" Disabled="@isConnected">Connect</MatButton>
</div>

<div>
    <span>Status: @connectionStatus</span>
</div>

<h4>Notifications</h4>

<ul>
    @foreach (string note in notifications)
    {
        <li>
            <div>
                @note;
            </div>
        </li>
    }
</ul>
