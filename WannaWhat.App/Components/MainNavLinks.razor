    }

    public void OnChatClick()
    {
        NavigationManager.NavigateTo("chat");
    }
    public void OnQuizClick()
    {
        NavigationManager.NavigateTo("quiz");
    }
    public void OnPlayClick()
    {
        NavigationManager.NavigateTo("play");
    }
    public void OnStokoClick()
    {
        NavigationManager.NavigateTo("stoko");
    }
    public void OnDateClick()
    {
        NavigationManager.NavigateTo("date");
    }
    public void OnBangClick()
    {
        NavigationManager.NavigateTo("bang");
    }

    public void OnContactUsClick()
