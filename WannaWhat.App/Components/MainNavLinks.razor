@inject NavigationManager NavigationManager

<div class="container">
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="dashboard" OnClick="@OnBowseClick" Label="Browse"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnCrushClick" Label="Crush"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnChatClick" Label="Chat"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnQuizClick" Label="Quiz"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnPlayClick" Label="Play"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnStokoClick" Label="Stoko"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnDateClick" Label="Date"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnBangClick" Label="Bang"></MatButton>
        </Animate>
    </div>

    @*<div class="item">
