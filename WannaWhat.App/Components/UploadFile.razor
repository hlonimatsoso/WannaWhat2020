@inherits UploadFileBase


<h3>Upload File Test :)</h3>

<div class="row">
    <div class="col-4">
        <div class="form-group">
            <input type="file" @ref="inputReference" @onchange="async ()=> await OpenFileAsync()" />

            <ul>
                <li>
                    File Name : @fileName
                </li>
                <li>
                    Image Type : @fileType
                </li>
                <li>
                    Image Size : @fileSize
                </li>
            </ul>
        </div>

        <button class="btn btn-block btn-success" @onclick="async ()=> await UploadFileAsync()">Upload File</button>

        @if(!string.IsNullOrWhiteSpace(message))
        {
            <div class="alert alert-success">
                File has been uploaded mjojo : @message
            </div>
        }

    </div>
    <div class="col-4">
        @if(!string.IsNullOrWhiteSpace(imagePath))
        {
            <img style="width:200px" src="@imagePath" />
        }
    </div>
</div>